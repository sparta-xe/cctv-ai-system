# CCTV AI System Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ADMIN_PASSWORD=admin123
SECURITY_PASSWORD=sec123
VIEWER_PASSWORD=view123

# Video Processing
FRAME_EXTRACTION_RATE=1
CONFIDENCE_THRESHOLD=0.5
MAX_VIDEO_SIZE_MB=500

# Person Tracking
SIMILARITY_THRESHOLD=0.85

# Search
DEFAULT_SEARCH_RESULTS=10

# Storage Paths
FRAME_FOLDER=storage/frames
VIDEO_FOLDER=storage/videos
MARKED_FOLDER=storage/marked
HIGHLIGHTS_FOLDER=storage/highlights

# Model Settings
YOLO_MODEL=yolov8n.pt
EMBEDDING_MODEL=all-MiniLM-L6-v2
CLIP_MODEL=ViT-B/32

# Alerts
ALERT_UNATTENDED_BAG=True
ALERT_CROWD_THRESHOLD=5

# Performance
USE_GPU=False
BATCH_SIZE=1
NUM_WORKERS=4

# Logging
LOG_LEVEL=INFO
LOG_FILE=cctv_ai.log

# CORS (for API access)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Optional: External Services
# REDIS_URL=redis://localhost:6379
# DATABASE_URL=postgresql://user:pass@localhost/cctv_ai
# S3_BUCKET=your-bucket-name
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
